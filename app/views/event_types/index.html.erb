<h1>Listing event_types</h1>

<table class="table">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Icon</th>
      <th>Color</th>
        <th colspan="3"></th>
    </tr>

  <%= content_tag_for(:tr, @event_types) do |event_type| %>
    <td><%= event_type.name %></td>
    <td><%= event_type.description %></td>
    <td><%= event_type.icon %></td>
    <td><%= event_type.color %></td>
      <td><%= link_to 'Show', event_type %></td>
    <td><%= link_to 'Edit', edit_event_type_path(event_type), class: 'btn btn-edit' %></td>
    <td><%= link_to 'Delete', event_type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-destroy' %></td>
  <% end %>
</table>


<div class="form-actions">
  <%= link_to 'New Event type', new_event_type_path, class: 'btn btn-success' %>
</div>
