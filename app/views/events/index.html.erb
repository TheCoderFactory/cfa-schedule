<h1>Listing events</h1>

<table class="table">
    <tr>
      <th>Event_type</th>
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
        <th colspan="3"></th>
    </tr>

  <%= content_tag_for(:tr, @events) do |event| %>
    <td><%= event.event_type %></td>
    <td><%= event.name %></td>
    <td><%= event.description %></td>
    <td><%= event.user %></td>
      <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event), class: 'btn btn-edit' %></td>
    <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-destroy' %></td>
  <% end %>
</table>


<div class="form-actions">
  <%= link_to 'New Event', new_event_path, class: 'btn btn-success' %>
</div>
